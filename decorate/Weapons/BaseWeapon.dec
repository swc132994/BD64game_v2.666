		TNT1 A 0 A_GiveInventory("Stamina",5)
		TNT1 A 0 A_GunFlash("KickingFlash")
		TNT1 A 0 A_PlaySound("KICK",CHAN_BODY)
		TNT1 A 0 A_Recoil(-6)
